<!DOCTYPE html>
<html>
    <head>
      <%-  include ('./partials/head') %>
      <%-  include ('./partials/headscripts') %>
          </head>
    <body>
         <%-  include ('./partials/header') %>
          <main>
                <section>
                  <div id="slider-animation" class="carousel slide" data-ride="carousel">
              
                <!-- Indicators -->
                <ul class="carousel-indicators">
                  <li data-target="#slider-animation" data-slide-to="0" class="active"></li>
                  <li data-target="#slider-animation" data-slide-to="1"></li>
                  <li data-target="#slider-animation" data-slide-to="2"></li>
                </ul>
              
                <!-- The slideshow -->
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/images/banner1.jpg" alt="" width="100%">
                      <div class="text-box">
                          <h2 class="wow slideInRight" data-wow-duration="2s">Promocion 1</h2>
                          <p class="wow slideInLeft" data-wow-duration="2s">Descripción 1 </p>
                      </div>
                  </div>
                  <div class="carousel-item">
                    <img src="/images/banner2.jpg" alt="" width="100%">
                  <div class="text-box">
                          <h2 class="wow slideInUp" data-wow-duration="4s" >Promocion 2</h2>
                          <p class="wow fadeInDown" data-wow-duration="4s">Descripción 2</p>
                      </div>
                  </div>
                  <div class="carousel-item">
                    <img src="/images/banner3.jpg" alt="" width="100%">
                  <div class="text-box">
                          <h2 class="wow fadeInUp" data-wow-duration="4s">Promocion 3</h2>
                          <p class="wow fadeInUp" data-wow-duration="2s">Descripción 3 </p>
                      </div>
                  </div>
                </div>
              
                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#slider-animation" data-slide="prev">
                  <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#slider-animation" data-slide="next">
                  <span class="carousel-control-next-icon"></span>
                </a>
              
              </div>
                  
              </section>      
                  <section class="last-visit">
                    <h3>Últimas oportunidades</h3>
                    <div class="products">
                        <article>
                            <img src="images/producto1.jpg" alt="Cafetera" class="product_img">
                            <div class="main-article">
                                <i class="fas fa-truck"></i>
                                <p class="price">$6.770</p>
                                <p class="discount">40% off</p>
                                <h4 class="description">Juego 1</h4>
                            </div>
                        </article>
                        <article>
                            <img src="images/producto2.jpg" alt="MacBook" class="product_img">
                            <div class="main-article">
                                <i class="fas fa-truck"></i>
                                <p class="price">$6.399</p>
                                <p class="discount">20% off</p>
                                <h4 class="description">Juego 2</h4>
                            </div>
                        </article>
                        <article>
                            <img src="images/producto3.jpg" alt="Teléfono Móvil Samsung Galaxy" class="product_img">
                            <div class="main-article">
                                <i class="fas fa-truck"></i>
                                <p class="price">$7.500</p>
                                <p class="discount">10% off</p>
                                <h4 class="description">Juego 3</h4>
                            </div>
                        </article>
                        <article>
                            <img src="images/producto4.jpg" alt="SmartTv Samsung" class="product_img">
                            <div class="main-article">
                                <i class="fas fa-truck"></i>
                                <p class="price">$3.200</p>
                                <p class="discount">5% off</p>
                                <h4 class="description">Juego 4</h4>
                            </div>
                        </article>
                    </div>
                </section>
            
            
            
            <!--slide end--> 
                  <!--newsletter-->
                  <section class="newsletter">
                    <div class="container">
                    <div class="row">
                    <div class="col-sm-12">
                      <div class="content">
                        <h2>SUSCRIBITE A NUESTRO NEWSLETTER</h2>
                      <div class="input-group">
                             <input type="email" class="form-control" placeholder="Ingresá tu email">
                             <span class="input-group-btn">
                             <button class="btn" type="submit">Suscribite</button>
                             </span>
                              </div>
                      </div>
                    </div>
                    </div>
                    </div>
                    </section>
                  <!--end newsletter-->
            

          </main>

          <%- include ('./partials/footer') %>
          

          <script> 

                                    wow = new WOW(
                                        {
                                          animateClass: 'animated',
                                          offset:       100,
                                          callback:     function(box) {
                                            console.log("WOW: animating <" + box.tagName.toLowerCase() + ">")
                                          }
                                        }
                                      );
                                      wow.init();
                                      document.getElementById('moar').onclick = function() {
                                        var section = document.createElement('section');
                                        section.className = 'section--purple wow fadeInDown';
                                        this.parentNode.insertBefore(section, this);
                                      };
          </script>

    </body>